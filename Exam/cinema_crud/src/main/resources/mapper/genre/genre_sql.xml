<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mjc813.cinema_crud.genre.service.GenreMapper">
    <insert id="insert" parameterType="GenreDto" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
            genre_tbl
            ( name )
        VALUES
            (#{name})
    </insert>

    <select id="findGenre" resultType="GenreDto">
        SELECT
            id
            , name
        FROM
            genre_tbl
    </select>

    <update id="update" parameterType="GenreDto">
        UPDATE
            genre_tbl
        SET
            name = #{name}
        WHERE
            id = #{id}
    </update>

    <delete id="delete" parameterType="Long">
        DELETE FROM
            genre_tbl
        WHERE
            id = #{id}
    </delete>
</mapper>